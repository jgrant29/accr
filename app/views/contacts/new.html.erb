<section class="container">
  <h1 class="hero-contact">Contact us</h1>
    <div class="col-md-4">
      <h4 class="text-center">We look forward to hearing from you</h4>
      <ul>
        <p><span class="glyphicon glyphicon-globe"></span>30 E. Adams Ste #940,<br><span class="address">Chicago IL, 60603</p>
        <p><span class="glyphicon glyphicon-earphone"></span>855-477-4675</p>
        <span class="glyphicon glyphicon-map-marker"><a href="https://goo.gl/maps/jLMpEhpuFzA2"></span>Get directions to our office.</a>      
      </ul>
    </div>
    <div class="col-md-8 ">
        <div class="form-group">
          <%= form_for @contact do |f| %>
            <%= f.label :name %><br>
            <%= f.text_field :name, required: true, class: 'form-control', placeholder: "Enter your name" %>
          </div>
          <div class="form-group">
            <%= f.label :email %><br>
            <%= f.email_field :email, required: true, class: 'form-control', placeholder: "Enter your email address" %>
          </div>
          <div class="form-group">
            <%= f.label :message %><br>
            <%= f.text_area :message, as: :text, required: true, class: 'form-control', rows: 8, placeholder: "Enter your message here" %>
          </div>
          <div class="hidden">
            <%= f.label :nickname %><br>
            <%= f.text_field :nickname, hint: "leave this field blank" %>
          </div>
            <%= f.submit "Send Message", class: "btn btn-success" %><br>
          <% end %>
          </div>
          </section>
        

